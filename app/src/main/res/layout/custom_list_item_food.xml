<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/whiter"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">


        <!-- Data -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/custom_bg_rounded_white"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/listImg"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:contentDescription="FOOD AREA IMAGE"
                    android:src="@drawable/foodarea" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/listTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="FOOD AREA NAME HERE"
                        android:textColor="@color/darkBlue"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/listMenu"
                        android:layout_gravity="right"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_heart"
                        android:gravity="top"
                        android:textSize="20sp"
                        android:visibility="visible"/>

                    <ImageView
                        android:id="@+id/listMenu2"
                        android:layout_gravity="right"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_hearted"
                        android:gravity="top"
                        android:textSize="20sp"
                        android:visibility="gone"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/listDesc1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LANDMARK OF AREA"
                    android:textColor="@color/blue"
                    android:textSize="13sp"
                    android:maxLines="2"/>

                <TextView
                    android:id="@+id/listDesc2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="PROVINCE"
                    android:textColor="@color/blue"
                    android:layout_marginBottom="3dp"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/listDesc3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date posted"
                    android:textColor="@color/gray"
                    android:textSize="10sp"
                    android:layout_marginBottom="3dp"
                    android:maxLines="2"/>


            </LinearLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>
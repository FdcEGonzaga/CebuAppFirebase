<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/manageTouristSpotFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/faded_bg"
    tools:context=".controllers.Admin.ManageTouristSpots.ManageTouristSpotsFragment">

    <!-- close btn -->
    <ImageButton
        android:id="@+id/fragment_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:elevation="1dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_close"
        android:background="@drawable/custom_btn_rounded2"
        />

    <ScrollView
        android:id="@+id/fragmentScroll"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STATUS"
                    android:textSize="10sp"
                    android:textColor="@color/darkBlue"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/isApproved"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/one_word_text"
                    android:textColor="@color/blue"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/detailTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TOURIST SPOT NAME"
                    android:textColor="@color/darkBlue"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/detailLandmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:text="LANDMARK OF THE PLACE"
                    android:textSize="16sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/detailProvince"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:text="PROVINCE"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/detailImg"
                    android:layout_width="match_parent"
                    android:layout_height="195dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/custom_input_field" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ABOUT"
                    android:textSize="10sp"
                    android:textColor="@color/darkBlue"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/detailDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/news_sample_text"
                    android:textColor="@color/blue"
                    android:textSize="13sp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"/>

                <!-- Contact Num and Email -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SPOT CONTACTS"
                    android:textSize="10sp"
                    android:textColor="@color/darkBlue"
                    android:layout_gravity="center|left"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/detailContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:text="elmer@gmail.com"
                    android:textSize="13sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/detailEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:text="09322222222"
                    android:textSize="13sp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"/>

                <!-- Author -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SPOT AUTHOR"
                    android:textSize="10sp"
                    android:textColor="@color/darkBlue"
                    android:layout_gravity="center|left"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/detailAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:text="elmer@gmail.com"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"/>

                <!-- Date posted -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DATE POSTED"
                    android:textSize="10sp"
                    android:textColor="@color/darkBlue"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/detailDatePosted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:text="MAY 18, 2022"
                    android:textSize="13sp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/detailEmailAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="EMAIL THE AUTHOR WITH BILLING STATEMENT"
                    android:textColor="@color/darkBlue"
                    android:background="@drawable/custom_btn_rounded2"
                    android:padding="10dp"
                    android:textSize="10sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

</FrameLayout>
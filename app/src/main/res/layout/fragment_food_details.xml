<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/manageFoodAreasFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/faded_bg"
    tools:context=".controllers.User.FoodAreas.FoodDetailsFragment">

    <!-- close btn -->
    <ImageButton
        android:id="@+id/fragment_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="75dp"
        android:layout_marginRight="5dp"
        android:elevation="1dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_close"
        android:background="@drawable/custom_btn_rounded2"
        />

    <ScrollView
        android:id="@+id/fragmentScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="90dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/detailTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="FOOD AREA NAME"
                    android:textColor="@color/darkBlue"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailLandmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="LANDMARK OF THE PLACE"
                    android:textColor="@color/blue"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/detailProvince"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center|left"
                    android:text="PROVINCE"
                    android:textColor="@color/lightBlue"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/detailImg"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:background="@color/lighterBlue"
                    android:layout_marginBottom="10dp"
                    android:src="@color/lighterBlue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:text="ABOUT THE FOOD AREA"
                    android:textColor="@color/darkBlue"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/detailDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/news_sample_text"
                    android:textColor="@color/blue"
                    android:textSize="13sp" />

                <!-- Contact Num and Email -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:text="CONTACTS"
                    android:textColor="@color/darkBlue"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/detailContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="elmer@gmail.com"
                    android:textColor="@color/blue"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/detailEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center|left"
                    android:text="09322222222"
                    android:textColor="@color/blue"
                    android:textSize="13sp" />

                <!-- Date posted -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:text="DATE POSTED"
                    android:textColor="@color/darkBlue"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/detailDatePosted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center|left"
                    android:text="MAY 18, 2022"
                    android:textColor="@color/blue"
                    android:textSize="13sp" />

                <!-- Line break -->
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/lightBlue"
                    android:minHeight="2dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="Do you want to inquire or reserve?"
                    android:textColor="@color/darkBlue"
                    android:textSize="16sp" />

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/callBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_btn_rounded2"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="CALL"
                        android:textColor="@color/darkBlue"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/emailBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_btn_rounded2"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="EMAIL"
                        android:textColor="@color/darkBlue"
                        android:textSize="13sp" />

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

</FrameLayout>
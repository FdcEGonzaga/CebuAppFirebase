<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/manageTouristSpotFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/faded_bg"
    tools:context=".controllers.User.TouristSpots.SpotsDetailsFragment">

    <!-- close btn -->
    <ImageButton
        android:id="@+id/fragment_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="75dp"
        android:layout_marginRight="5dp"
        android:elevation="1dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_close"
        android:background="@drawable/custom_btn_rounded2"
        />

    <ScrollView
        android:id="@+id/fragmentScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="90dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- image -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/detailImg"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:background="@color/lighterBlue"
                        android:contentDescription="TOURIST SPOT IMAGE"
                        android:src="@color/lighterBlue" />

                </LinearLayout>
                <!-- before the image -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/detailTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TOURIST SPOT NAME"
                        android:textColor="@color/darkBlue"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/detailLandmark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:text="LANDMARK OF THE PLACE"
                        android:textSize="16sp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/detailProvince"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:text="PROVINCE"
                        android:textSize="16sp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"/>
                </LinearLayout>
                <!-- after the image -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ABOUT"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:textColor="@color/darkBlue"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/detailDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/news_sample_text"
                        android:textColor="@color/blue"
                        android:textSize="13sp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"/>

                    <!-- Contact Num and Email -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CONTACTS"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:textColor="@color/darkBlue"
                        android:layout_gravity="center|left"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/detailContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:text="elmer@gmail.com"
                        android:textSize="13sp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/detailEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:text="09322222222"
                        android:textSize="13sp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"/>

                    <!-- Date posted -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DATE POSTED"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:textColor="@color/darkBlue"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/detailDatePosted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:text="MAY 18, 2022"
                        android:textSize="13sp"
                        android:gravity="center"/>

                    <!-- Line break -->
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="2dp"
                        android:background="@color/lightBlue"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkBlue"
                        android:text="Do you want to inquire or reserve?"
                        android:textSize="16sp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"/>

                    <!-- Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/callBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CALL"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:background="@drawable/custom_btn_rounded2"
                            android:padding="10dp"
                            android:layout_margin="5dp"
                            android:textColor="@color/darkBlue"
                            android:layout_weight="1"
                            android:layout_gravity="center"/>

                        <Button
                            android:id="@+id/emailBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EMAIL"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:background="@drawable/custom_btn_rounded2"
                            android:padding="10dp"
                            android:layout_margin="5dp"
                            android:textColor="@color/darkBlue"
                            android:layout_weight="1"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </ScrollView>

</FrameLayout>